// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run `zed: open default settings` from the
// command palette (cmd-shift-p / ctrl-shift-p)
{
  "agent": {
    "default_model": {
      "provider": "ollama",
      "model": "qwen3:14b"
    },
    "version": "2"
  },
  "telemetry": {
    "metrics": false,
    "diagnostics": false
  },
  "language_models": {
    "ollama": {
      "available_models": [
        {
          "name": "gemma3:4b-it-qat",
          "display_name": "Gemma3",
          "max_tokens": 32768,
          "supports_tools": false
        },
        {
          "name": "qwen2.5-coder",
          "display_name": "Qwen coder",
          "max_tokens": 16384,
          "supports_tools": true
        }
      ]
    }
  },
  "features": {
    "edit_prediction_provider": null
  },
  "vim_mode": true,
  "ui_font_size": 16,
  "buffer_font_size": 14,
  "buffer_font_family": "UbuntuMono Nerd Font Propo",
  "buffer_font_weight": 500,
  "buffer_line_height": "standard",
  "theme": {
    "mode": "system",
    "light": "Catppuccin Latte",
    "dark": "Catppuccin Mocha (Blur)"
  },
  "base_keymap": "VSCode",
  "relative_line_numbers": true,
  "lsp": {
    "rust-analyzer": {
      "initialization_options": {
        "check": {
          "command": "clippy"
        }
      }
    }
  },
  "auto_install_extensions": {
    "toml": true,
    "surrealql": true,
    "html": true,
    "catppuccin": true,
    "nu": true
  }
}
